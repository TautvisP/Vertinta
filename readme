# Python virtual environment setup
python3 -m venv .venv


# Activate virtual environment
source .venv/bin/activate


# Install packages into virtual environment
pip install -r requirements.txt


# NPM install
npm install


# Apply DB migrations (don't forget to cd into 'dev' folder first)
cd ./dev
python manage.py makemigrations
python manage.py migrate


# Create superuser
python manage.py createsuperuser

# U: admin@test.indeform.com
# P: SeCure99#


# Apply localization (double click "localize.sh" if marked as "executable")
bash localize.sh


# Run application (double click "run.sh" if marked as "executable")
# Mark executable: Mouse Right Click -> Properties -> Permissions -> Allow executing file as program.
bash run.sh



# To create your own module:
python ../manage.py startapp mymodulename


# Good luck!
